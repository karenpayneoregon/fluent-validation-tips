@page
@using FluentWebApplication1.Classes
@using FluentWebApplication1.Models

@model IndexModel
@{
    ViewData["Title"] = "Customer Information";
}

<div class="container my-4">

    <div class="card bg-white shadow-sm">

        <div class="card-body p-4">

            <h1 class="h4 mb-4">Customer Information</h1>



            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="col-12">
                    <div class="col-12 col-md-12">
                        <label asp-for="Customer.DateOfBirth" class="form-label"></label>
                        <input asp-for="Customer.DateOfBirth" id="picker" class="form-control" style="width: 200px" type="date"   />
                        <span class="text-danger small" asp-validation-for="Customer.DateOfBirth"></span>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.Customer.FirstName" class="form-label"></label>
                    <input asp-for="@Model.Customer.FirstName" class="form-control" />
                    <span class="text-danger small" asp-validation-for="Customer.FirstName"></span>
                </div>

                <!-- Last Name -->
                <div class="col-12 col-md-6">
                    <label asp-for="@Model.Customer.LastName" class="form-label"></label>
                    <input asp-for="@Model.Customer.LastName" class="form-control"/>
                    <span class="text-danger small" asp-validation-for="Customer.LastName"></span>
                </div>

                <div class="row g-3">

                    <!-- Submit -->
                    <div class="col-12">
                        <input type="submit"
                               value="Continue"
                               asp-page-handler="Submit"
                               class="btn btn-primary mt-2"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

