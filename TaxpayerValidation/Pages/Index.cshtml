@page
@model TaxpayerValidation.Pages.IndexModel

<div class="container mt-4">
    <h2>Taxpayer List</h2>

    <!-- Header -->
    <div class="row fw-bold border-bottom pb-2 mb-2 align-items-center">
        <div class="col-auto">ID</div>
        <div class="col">First Name</div>
        <div class="col">Last Name</div>
        <div class="col">SSN (masked)</div>
        <div class="col">Start date</div>
        <div class="col text-end">Actions</div>
    </div>

    @foreach (var item in Model.Taxpayer)
    {
        <div class="row border-bottom py-2 align-items-center">
            <div class="col-auto">@item.Id</div>
            <div class="col">@item.FirstName</div>
            <div class="col">@item.LastName</div>

            <!-- Masked SSN -->
            <div class="col">@item.SsnHidden</div>

            <!-- Correct, resilient StartDate formatting -->
            <div class="col">@($"{item.StartDate:MM/dd/yyyy}")</div>

            <div class="col text-end">
                <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>

        </div>
    }
</div>